<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Button.Default.BackgroundColor" Color="#ffffff"/>
    <SolidColorBrush x:Key="Button.Default.Disabled.BackgroundColor" Color="#f5f5f5"/>
    <SolidColorBrush x:Key="Button.Default.BorderColor" Color="#ffffff"/>
    <SolidColorBrush x:Key="Button.Default.ForgegroundColor" Color="#000000" Opacity="0.5"/>
    <SolidColorBrush x:Key="Button.Default.MouseOver.BackgroundColor" Color="#FFBEE6FD"/>
    <SolidColorBrush x:Key="Button.Default.MouseOver.Border" Color="#FF3C7FB1"/>
    <SolidColorBrush x:Key="Button.Default.Pressed.Background" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="Button.Default.Pressed.Border" Color="#FF2C628B"/>
    <SolidColorBrush x:Key="Button.Default.Disabled.ForgegroundColor" Color="#000000" Opacity="0.25"/>


</ResourceDictionary>